<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        >

        <LinearLayout
            android:id="@+id/product_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#d4d4d4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_productLayout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingStart="40dp"
                android:text="@string/name"
                android:textColor="#40595b"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/disc_ProductLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="disc"
                android:textColor="#40595b" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_productLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="price:"

                    android:textColor="#4f6a6c" />

                <TextView
                    android:id="@+id/units_productLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="units:"

                    android:textColor="#4f6a6c" />

                <TextView
                    android:id="@+id/limits_productLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="limits:"

                    android:textColor="#4f6a6c" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>