<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:layout_marginStart="300dp"
            android:background="#d4d4d4"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/_imgBtn_add_BillLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d4d4d4"

                app:srcCompat="@android:drawable/ic_menu_add" />

            <EditText
                android:id="@+id/itemsET_BillLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_backgroud"
                android:ems="10"
                android:inputType="number"
                android:paddingStart="20dp"
                android:text="0" />

            <ImageView
                android:id="@+id/imgBtn_minus_BillLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#d4d4d4"
                android:paddingTop="7dp"

                android:paddingBottom="7dp"
                app:srcCompat="@drawable/minus" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/product_Layout"
            android:layout_width="300dp"
            android:layout_height="133dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#d4d4d4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_BillLayout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingStart="40dp"
                android:text="@string/name"
                android:textColor="#40595b"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/disc_BillLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="disc"
                android:textColor="#40595b" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_BillLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="price:"

                    android:textColor="#4f6a6c" />

                <TextView
                    android:id="@+id/units_BillLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="units:"

                    android:textColor="#4f6a6c" />

                <TextView
                    android:id="@+id/limits_BillLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="limits:"

                    android:textColor="#4f6a6c" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_addToBill_BillLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="142dp"
        android:text="@string/addToBill" />

</RelativeLayout>